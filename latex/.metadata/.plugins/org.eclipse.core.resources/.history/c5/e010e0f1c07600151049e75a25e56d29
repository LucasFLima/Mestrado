module simbol {

   entity SimbolReq {
      string : designation; /* */
      [Simbol] : simbols;  /*Required.*/
      string : subordinated;
      long : width;
      long : height;
      string : hstlyColor;  /*Required.*/
   };

   entity Simbol {
      int : order;  /*Required.*/
      boolean : hstlyLine;  /*Required.*/
      string : name;  /*Required.*/
      boolean : hstlyFill;  /*Required.*/
   };

   service {
      path = "/simbol";

      /**
      * @ summary: Simbols composition
      * @ params:
      *   body simbInfo(*):
      */
      @post string (SimbolReq simbInfo);
  }; 
}
